rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    match /avatars/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid + '.jpg' == fileName;
      allow delete: if isAuthenticated() && request.auth.uid + '.jpg' == fileName;
    }
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

